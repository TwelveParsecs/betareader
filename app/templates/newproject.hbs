{{partial 'navbar'}}

<div id="add-novel">
  <div id="add-novel-content">
    <div id="center-grid">

      <h2>Add a Novel</h2>

      <div>
        Upload your excerpt
        <div class="input-instruct">
          This is the sample of the novel that your reader will review. It can be a few pages or an entire chapter.
        </div>

        <div class="dropzone">
          <div class="dropzone-text">
            Drop the file here or
          </div>
          <div class="secondary-button">Browse Files</div>
        </div>
      </div>

      <div>
        Upload your manuscript
        <div class="input-instruct">
          This is the full manuscript that approved readers will critique.
        </div>

        <div class="dropzone">
          <div class="dropzone-text">
            Drop the file here or
          </div>
          <div class="secondary-button">Browse Files</div>
        </div>
      </div>

      <hr noshade/>

      <label for="title">Title</label>
      {{input type="text" value=title id="title"}}

      <label for="description">Give a description of your project. What will it say on the back of the book?</label>
      {{textarea value=description id="description" cols="80" rows="6"}}

      <label for="critique-instructions">What kind of critique do you want? What should your readers know?</label>
      {{textarea value=critiqueInstruction  id="critique-instructions" cols="80" rows="6"}}

      <hr noshade/>
      <div class="col-left">
        <label for="words-in-preview" >How many words in the excerpt?</label>
        {{input type="text" value=wordsInPreview  id="words-in-preview"}}
      </div>

      <div class="col-right">
        <label for="words-in-manuscript">How many words are in the manuscript?</label>
        {{input type="text" value=wordsInManuscript  id="words-in-manuscript"}}
      </div>

      <div class="col-left">
        <label for="age-limit">Target Audience Age</label>
        <div class="input-instruct top">
          This will default to 18+ if you have mature content
        </div>
        {{input type="text" value=ageLimit  id="age-limit"}}
        <div class="input-instruct bottom">
          This will default to 18+ if you have mature content
        </div>
      </div>

      <div class="col-right">
        <label for="looking-for">What are you looking for?</label>
        {{drop-down options=lookingForOptions id="looking-for" sendOptions="setLookingFor" class="dropdown"}}
      </div>

      <div class="col-left" id="genres-tags">
        <label for="tags">Genres</label>
        <div class="input-instruct top">
          Enter genres separated by commas
        </div>
        {{tag-input sendOptions="setTags" id="tags"}}
        <div class="input-instruct bottom">
          Enter genres separated by commas
        </div>
      </div>

      <div class="col-left" id="mature-block">
        {{input type="checkbox" checked=matureContent name="matureContent" id="mature-content"}}
        <label for="mature-content" id="mature-content-label">Mature Content</label>
      </div>

      <div class="col-right">
        <button {{action "createProject"}} id="submit-button" >Create Project</button>
      </div>
      <!-- <div>
        Upload your preview
        <div class="input-instruct">
          This is the excerpt that a potential reader will review. It can be a few pages or an entire chapter.
        </div>
      </div> -->

    </div>
  </div>
</div>

{{partial 'footer'}}
