<form>
  <div id="signup1">
    <label for="email">Email</label>
    {{input type="text" value=email id="email"}}

    <label for="password">Password</label>
    {{input type="text" value=password id="password"}}
    {{input type="text" value=confirmPassword id="confirm-password" value="Confirm Password"}}
  </div>

  <div id="signup2">
    <label for="pen-name">Pen Name</label>
    {{input type="text" value=name id="pen-name"}}

    <fieldset>
      <legend>Birthday</legend>
        {{input type="text" value=day id="bday-day" value="dd"}}
        {{input type="text" value=month id="bday-month" value="mm"}}
        {{input type="text" value=year id="bday-year" value="yyyy"}}
    </fieldset>

    <label for="education">Highest Education Level</label>
    {{drop-down options=educationOptions id="education" sendOptions="setEducation"}}

  </div>

  <div id="signup3">
    <label for="genres-read">What genres do you read?</label>
    {{input type="text" id="genres-read"}}

    <label for="read-freq">How often do you read?</label>
    {{drop-down options=readFreqOptions id="read-freq" sendOptions="setEducation"}}

    <label for="novel-length">What is your ideal novel length?</label>
    {{drop-down options=novelLengthOptions id="novel-length"}}
  </div>

  <div id="signup4">
    Do you write?
    <input type="radio" name="write" id="write-yes" value="1" /><label for="write-yes"> Yes</label>
    <input type="radio" name="write" id="write-no" value="1" /><label for="write-no"> No</label>

    <label for="genres-write">What genres do you write?</label>
    {{input type="text" id="genres-write"}}
  </div>

  <div id="signup5">
    <label for="years-writing">How many years have you been writing seriously?</label>
    {{input type="text" id="years-writing"}}

    <label for="draft-completion">How often do you finish drafts?</label>
    {{drop-down options=draftCompletionOptions id="draft-completion"}}

    Have you ever published with a publishing house?
    <input type="radio" name="write" id="published-yes" value="1" /><label for="published-yes"> Yes</label>
    <input type="radio" name="write" id="published-no" value="1" /><label for="published-no"> No</label>
  </div>

  <div id="signup6">

    <label for="experience">How much experience do you have with critique?</label>
    {{drop-down options=experienceOptions id="experience"}}

    <label for="hours">How many hours a week do you have for critique?</label>
    {{drop-down options=hoursOptions id="hours"}}
  </div>

  <div id="signup7">
    <label for="description">Write a little about yourself.</label>
    {{textarea id="description" cols="80" rows="6"}}
  </div>
  <button {{action "newUser"}}>Finish</button>
</form>

{{outlet}}
