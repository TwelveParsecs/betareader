{{partial 'navbar'}}

 <h1>New Project</h1>

<div>
  Upload your manuscript
  <div class="input-instruct">
    This is the full manuscript that approved readers will critique.
  </div>
</div>

<label for="title">Title</label>
{{input type="text" value=title id="title"}}

<label for="description">A short description of your project</label>
{{textarea value=description id="description" cols="80" rows="6"}}

<label for="critique-instructions">What kind of critique do you want? What should your readers know?</label>
{{textarea value=critiqueInstruction  id="critique-instructions" cols="80" rows="6"}}

<label for="words-in-preview">How many words in this preview?</label>
{{input type="text" value=wordsInPreview  id="words-in-preview"}}

<label for="words-in-manuscript">How many words are in the manuscript?</label>
{{input type="text" value=wordsInManuscript  id="words-in-manuscript"}}

<label for="age-limit">Age limit?</label>
{{input type="text" value=ageLimit  id="age-limit"}}

<label for="looking-for">What are you looking for?</label>
{{drop-down options=lookingForOptions id="looking-for" sendOptions="setLookingFor"}}

<label for="tags">Add some tags</label>
{{input type="text" value=tags id="tags"}}

<label for="mature-content">Mature Content</label>
{{input type="checkbox" checked=matureContent name="matureContent" id="mature-content"}}

<button {{action "createProject"}}>Create Project</button>
