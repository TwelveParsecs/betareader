<form>
  <div id="signup1">
    <label for="email">Email</label>
    {{input type="text" value=email id="email"}}

    <label for="password">Password</label>
    {{input type="text" value=password id="password"}}
    {{input type="text" value=confirmPassword id="confirm-password" value="Confirm Password"}}
  </div>

  <div id="signup2">
    <label for="pen-name">Pen Name</label>
    {{input type="text" value=name id="pen-name"}}

    <fieldset>
      <legend>Birthday</legend>
        {{input type="text" value=day id="bday-day" value="dd"}}
        {{input type="text" value=month id="bday-month" value="mm"}}
        {{input type="text" value=year id="bday-year" value="yyyy"}}
    </fieldset>

    <label for="education">Highest Education Level</label>
    <select id="education">
      <option value="high school">High School</option>
      <option value="college">College Diploma</option>
      <option value="bachelors">Bachelors Degree</option>
      <option value="masters">Masters Degree</option>
      <option value="doctorate">Doctorate</option>
    </select>
  </div>

  <div id="signup3">
    <label for="genres-read">What genres do you read?</label>
    {{input type="text" id="genres-read"}}

    <label for="read-freq">How often do you read?</label>
    <select id="read-freq">
      <option value="1">Every day</option>
      <option value="2">More than twice a week</option>
      <option value="3">Once a week</option>
      <option value="4">Less than once a week</option>
    </select>

    <label for="novel-length">How often do you read?</label>
    <select id="novel-length">
      <option value="1">200 pages</option>
      <option value="2">500 pages</option>
      <option value="3">1000 pages</option>
      <option value="4">1000 pages</option>
    </select>
  </div>

  <div id="signup4">
    <input type="radio" name="write" id="write-yes" value="1" /><label for="write-yes"> Yes</label>
    <input type="radio" name="write" id="write-no" value="1" /><label for="write-no"> No</label>

    <label for="genres-read">What genres do you write?</label>
    {{input type="text" id="genres-read"}}
  </div>

  <div id="signup5">
    <label for="genres-read">How many years have you been writing seriously?</label>
    {{input type="text" id="years-writing"}}

    <label for="novel-length">How often do you finish drafts?</label>
    <select id="novel-length">
      <option value="1">Every month</option>
      <option value="2">A few times a year</option>
      <option value="3">A year or more</option>
    </select>

    <input type="radio" name="write" id="published-yes" value="1" /><label for="published-yes"> Yes</label>
    <input type="radio" name="write" id="published-no" value="1" /><label for="published-no"> No</label>
  </div>

  <div id="signup6">

    <label for="experience">How much experience do you have with critique?</label>
    <select id="experience">
      <option value="1">Very experienced</option>
      <option value="2">Moderately experienced</option>
      <option value="3">Little experience</option>
      <option value="4">No experience</option>
    </select>

    <label for="hours">How many hours a week do you have for critique?</label>
    <select id="hours">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="4">5+</option>
    </select>
  </div>

  <div id="signup7">
    <label for="description">Write a little about yourself.</label>
    {{textarea id="description" cols="80" rows="6"}}
  </div>
  <button {{action "newUser"}}>Finish</button>
</form>

{{outlet}}
